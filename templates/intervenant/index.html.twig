{% extends 'base.html.twig' %}

{% block title %}Intervenant index
{% endblock %}

{% block body %}
	<h1>Intervenant index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Prénom</th>
				<th>Matière</th>
			</tr>
		</thead>
		<tbody>
			{% for intervenant in intervenants %}
				<tr>
					<td>{{ intervenant.user.lastname }}</td>	
					<td>{{ intervenant.user.firstname }}</td>
					<td>{{ intervenant.matieres | join(' | ') }} </td>
					<td>
						<a href="{{ path('app_intervenant_show', {'id_intervenant': intervenant.idIntervenant}) }}">show</a>
						<a href="{{ path('app_intervenant_edit', {'id_intervenant': intervenant.idIntervenant}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_intervenant_new') }}">Create new</a>
{% endblock %}
